@model TeamTracker.Entities.Teams

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditTeam</title>
</head>
<body>

    <h4>Teams</h4>
    <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditTeam">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TeamName" class="control-label"></label>
                        <input asp-for="TeamName" class="form-control" />
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamManager" class="control-label"></label>
                        <input asp-for="TeamManager" class="form-control" />
                        <span asp-validation-for="TeamManager" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainOfWork" class="control-label"></label>
                        <input asp-for="DomainOfWork" class="form-control" />
                        <span asp-validation-for="DomainOfWork" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeamMembers" class="control-label"></label>
                        <input asp-for="TeamMembers" class="form-control" />
                        <span asp-validation-for="TeamMembers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="button" value="Edit" onclick="location.href='@Url.Action("UpdateTeam", "Team")'" />
                        @*<input type="submit" value="Save" class="btn btn-primary" />*@
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </body>
</html>
